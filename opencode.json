          "name": "captain-code:latest",
          "tools": true
        },
        "dev-ninja:latest": {
          "name": "dev-ninja:latest",
          "tools": true
        },
        "code-maestro:latest": {
          "name": "code-maestro:latest",
          "tools": true,
          "reasoning": true
        },
        "code-buddy:latest": {
          "name": "code-buddy:latest",
          "tools": true,
          "reasoning": true
        },
        "pocket-coder:latest": {
          "name": "pocket-coder:latest",
          "tools": true
