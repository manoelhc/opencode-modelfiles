{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "permission": {
    "lsp": "allow",
    "bash": "allow",
    "grep": "allow",
    "curl": "allow",
    "list": "allow",
    "read": "allow",
    "write": "allow",
    "delete": "allow",
